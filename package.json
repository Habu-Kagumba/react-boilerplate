{
  "name": "react-boilerplate-tutorial",
  "description": "",
  "version": "1.0.0",
  "keywords": [],
  "author": "Herbert Kagumba <habukagumba@gmail.com>",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "test:flow": "flow",
    "test:eslint": "eslint src/ --ext .js --ext .jsx",
    "pretest": "npm run test:eslint && npm run test:flow",
    "start": "NODE_ENV=development parcel src/index.html --open",
    "build": "NODE_ENV=production parcel build src/index.html --public-url https://habu-kagumba.github.io/react-boilerplate/",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "lint-staged": {
    "*.{js,jsx,json,scss,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "postcss": {
    "modules": true,
    "plugins": {
      "lost": {},
      "autoprefixer": {
        "overrideBrowsersList": [
          "last 2 versions"
        ]
      },
      "postcss-preset-env": {},
      "postcss-modules": {
        "generateScopedName": "[name]_[local]_[hash:base64:5]"
      }
    }
  },
  "dependencies": {
    "prop-types": "^15.7.2",
    "ramda": "^0.26.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "eslint": "^5.16.0",
    "eslint-plugin-react": "^7.13.0",
    "flow-bin": "^0.100.0",
    "gh-pages": "^2.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^9.2.5",
    "lost": "^8.3.1",
    "modules": "^0.4.0",
    "node-sass": "^4.12.0",
    "parcel-bundler": "^1.12.3",
    "postcss-modules": "^1.4.1",
    "postcss-preset-env": "^6.6.0",
    "prettier": "^1.18.2",
    "react-hot-loader": "^4.9.0",
    "stylelint": "^9.10.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
